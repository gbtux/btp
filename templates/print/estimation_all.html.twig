</head>
<body style="background: none;-webkit-print-color-adjust: exact !important;">
<div class="app-wrap">
    <div class="app-container" style="margin: 0;">
        <div class="main-content" style="padding: 0">

            <!-- Row start -->
            <div class="row-fluid gutters justify-content-center">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                    <div class="invoice-container">

                        <div class="invoice-header" style="border-bottom: 2px solid #000;">
                            <!-- Row start -->
                            <div class="row gutters">
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                                    <img src="{{ asset('invoice/img/acb-sigle-noir.png') }}" class="invoice-logo" alt="ACB Logo" style="max-width: 150px" />
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6" style="text-align: right">
                                    <!-- <p><strong>DEV-20190404-782</strong></p>
                                    <p><strong>fait le 24/04/2019</strong></p> -->
                                    <img src="{{ asset('invoice/img/rge.jpg') }}" class="invoice-logo" alt="RGE Logo" style="max-width: 150px" />
                                </div>
                            </div>
                            <!-- Row end -->
                        </div>

                        <div class="invoice-address" style="border-bottom: 2px solid #f48431;">
                            <!-- Row start -->
                            <div class="row gutters">
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <small>Notre société,</small><br><br>
                                    <h6>Aménagement Construction du Bâtiment</h6>
                                    <address>
                                        106 impasse de l'Aramon<br>
                                        ZI LA FARLEDE BP 10373<br>
                                        83085 TOULON CEDEX 9 <br>
                                        Tél : 09 82 27 28 83 <br>
                                        Email: contact@acb-var.com
                                    </address>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <small>Votre contact,</small><br><br>
                                    <h6>Bruno Fereira</h6>
                                    <address>
                                        Mobile: 06 98 05 12 52<br>
                                    </address>
                                    <h6>Laurent Andreani</h6>
                                    <address>
                                        Mobile: 07 63 05 25 64<br>
                                    </address>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <small>Vous,</small><br><br>
                                    <h6>SARL BETINA</h6>
                                    <address>
                                        191 AVENUE DE LA SOLANGE<br>
                                        83130 La Garde<br>
                                        Tél: 000-000-0000
                                    </address>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <div class="invoice-details">
                                        <small>ESTIMATIF</small><br>
                                        <small>EST-{{ estimation.id|hashids_encode }}</small><br>
                                        <small>{{ "now"|date("d/m/Y") }}</small><br>
                                    </div>
                                </div>
                            </div>
                            <!-- Row end -->
                        </div>

                        <div class="invoice-body">

                            <!-- Row start -->
                            <div class="row gutters">
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <p><b>Votre projet : {{ estimation.chantier.libelle }}</b></p>
                                    <p>{{ estimation.chantier.adresse1 }} {{ estimation.chantier.adresse2 }} {{ estimation.chantier.codePostal }} {{ estimation.chantier.ville }}</p>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">

                                </div>
                            </div>
                            <!-- Row end -->

                            {# set variables #}
                            {% set totalHT = 0 %}
                            {% set totalTVA55 = 0 %}
                            {% set totalTVA10 = 0 %}
                            {% set totalTVA20 = 0 %}

                            {# end set variables #}

                            <!-- Row start -->
                            <div class="row gutters">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <table class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <th>Référence</th>
                                            <th>Description</th>
                                            <th>Quantité</th>
                                            <th>PU HT</th>
                                            <th>TVA</th>
                                            <th>Total HT</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                            {% for poste in estimation.postes %}
                                                {# poste variables #}
                                                    {% set totalPosteHT = 0 %}
                                                {# end poste variables #}
                                                <tr>
                                                    <td colspan="6"><strong> LOT {{ poste.titre|upper }}</strong></td>
                                                </tr>
                                                {% for article in poste.articles %}
                                                    <tr>
                                                        <td>{{ article.reference }}</td>
                                                        <td>{{ article.designation }}</td>
                                                        <td>{{ article.quantite }}</td>
                                                        <td>{{ article.pubHT }}<br><small>{{ article.unitePrix }}</small></td>
                                                        <td>{{ article.tauxTVA }}%<br><small>({{ article.pubHT * article.quantite * article.tauxTVA / 100 }} €)</small></td>
                                                        <td>{{ article.pubHT * article.quantite }}</td>
                                                        {% set totalPosteHT =  totalPosteHT + (article.pubHT * article.quantite) %}
                                                        {% set totalHT = totalHT + (article.pubHT * article.quantite) %}
                                                        {% if article.tauxTVA == '5.5' %}
                                                            {% set totalTVA55 = totalTVA55 + (article.pubHT * article.quantite * article.tauxTVA / 100) %}
                                                        {% endif %}
                                                        {% if article.tauxTVA == '10' %}
                                                            {% set totalTVA10 = totalTVA10 + (article.pubHT * article.quantite * article.tauxTVA / 100) %}
                                                        {% endif %}
                                                        {% if article.tauxTVA == '20' %}
                                                            {% set totalTVA20 = totalTVA20 + (article.pubHT * article.quantite * article.tauxTVA / 100) %}
                                                        {% endif %}
                                                    </tr>
                                                {% endfor %}
                                                {% for sposte in poste.sousPostes %}
                                                    <tr>
                                                        <td colspan="6">SOUS LOT {{ sposte.titre|upper }}</td>
                                                    </tr>
                                                    {% for article in sposte.articles %}
                                                        <tr>
                                                            <td>{{ article.reference }}</td>
                                                            <td>{{ article.designation }}</td>
                                                            <td>{{ article.quantite }}</td>
                                                            <td>{{ article.pubHT }}<br><small>{{ article.unitePrix }}</small></td>
                                                            <td>{{ article.tauxTVA }}%<br><small>({{ article.pubHT * article.quantite * article.tauxTVA / 100 }} €)</small></td>
                                                            <td>{{ article.pubHT * article.quantite }}</td>
                                                            {% set totalPosteHT =  totalPosteHT + (article.pubHT * article.quantite) %}
                                                            {% set totalHT = totalHT + (article.pubHT * article.quantite) %}
                                                            {% if article.tauxTVA == '5.5' %}
                                                                {% set totalTVA55 = totalTVA55 + (article.pubHT * article.quantite * article.tauxTVA / 100) %}
                                                            {% endif %}
                                                            {% if article.tauxTVA == '10' %}
                                                                {% set totalTVA10 = totalTVA10 + (article.pubHT * article.quantite * article.tauxTVA / 100) %}
                                                            {% endif %}
                                                            {% if article.tauxTVA == '20' %}
                                                                {% set totalTVA20 = totalTVA20 + (article.pubHT * article.quantite * article.tauxTVA / 100) %}
                                                            {% endif %}
                                                        </tr>
                                                    {% endfor %}
                                                {% endfor %}
                                                <tr style="background: rgb(240, 244, 248)">
                                                    <td colspan="4"></td>
                                                    <td>total poste HT</td>
                                                    <td>{{ totalPosteHT }} €</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- Row end -->

                            <!-- Row start -->
                            <div class="invoice-payment">
                                <div class="row gutters">
                                    <div class="col-lg-6 col-md-6 col-sm-12">
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 order-last">
                                        <table class="table no-border m-0">
                                            <tbody>
                                            <tr>
                                                <td>
                                                    <p>
                                                        <strong>Total Net HT</strong><br />
                                                        TVA 5.50%<br />
                                                        TVA 10.00%<br />
                                                        TVA 20.00%<br />
                                                        <strong>Montant total TTC</strong>
                                                    </p>
                                                    <!--<h5 class="text-danger"><strong>Grand Total</strong></h5>-->
                                                </td>
                                                <td>
                                                    <p>
                                                        <strong>{{ totalHT }} €</strong><br />
                                                        {{ totalTVA55 }} €<br />
                                                        {{ totalTVA10 }} €<br />
                                                        {{ totalTVA20 }} €<br />
                                                        <strong>{{ totalHT + totalTVA55 + totalTVA10 + totalTVA20 }} €</strong>
                                                    </p>
                                                    <!--<h5 class="text-danger"><strong>$1250.00</strong></h5>-->
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- Row end -->

                        </div>

                        <div class="invoice-footer">

                        </div>

                    </div>
                </div>
            </div>
            <!-- Row end -->

        </div>
    </div>
</div>
</body>
</html>
